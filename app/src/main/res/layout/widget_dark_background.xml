<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="150dp"
              android:background="#96000000"
              android:padding="@dimen/widgetmargin"
              android:layout_height="50dp">

    <LinearLayout
        android:id="@+id/policeLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:padding="@dimen/spacing_half"

        >


        <ImageView
            android:id="@+id/police"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:src="@drawable/police_plain"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/police"
            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/fireServiceLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/spacing_half"

        >


        <ImageView
            android:id="@+id/fire_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
             android:src="@drawable/fire_service_plain"
            android:tint="@color/fireservice"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ambulanceLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/spacing_half"
         >


        <ImageView
            android:id="@+id/ambulance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ambulance_plain"
            android:clickable="true"
            android:tint="@color/ambulance"
            android:focusable="true"
             />

    </LinearLayout>

</LinearLayout>