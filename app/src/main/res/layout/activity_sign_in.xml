<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/white"
    >




        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Display1"
            android:text="Sign In!"
            android:layout_marginTop="@dimen/spacing_2"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            />



    <TextView
        android:layout_below="@+id/header_text"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please sign in with one of the options below"
        android:layout_marginTop="@dimen/spacing_half"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/primary_text_light"
          />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/spacing_normal"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/spacing_2"
        android:layout_marginRight="@dimen/spacing_2"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textStyle="bold"
            android:background="@drawable/phone_gradient_background"
             android:padding="@dimen/spacing_normal"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/spacing_normal"

        />


        <TextView
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Google"
            android:background="@drawable/google_gradient_background"
            android:padding="@dimen/spacing_normal"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/spacing_normal"

            />



        <TextView
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:background="@drawable/facebook_gradient_background"
            android:padding="@dimen/spacing_normal"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/spacing_normal"

            />




        <TextView
            android:id="@+id/twitter"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:background="@drawable/twitter_gradient_background"
            android:padding="@dimen/spacing_normal"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="@dimen/spacing_normal"


            />



    </LinearLayout>



    <TextView
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By signing in, you agree to the Terms and Conditions"
          android:layout_centerHorizontal="true"
         android:gravity="center"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="@dimen/spacing_normal"
         android:textSize="@dimen/text_size_small"
         android:textColor="@color/divider_2"
        />


</RelativeLayout>